import os
import random
import shutil
from pathlib import Path

def add_zero_to_filename(filename):
    """
    –î–æ–±–∞–≤–ª—è–µ—Ç '0' –≤ —Å–ª—É—á–∞–π–Ω–æ–µ –º–µ—Å—Ç–æ –≤ –∏–º–µ–Ω–∏ —Ñ–∞–π–ª–∞ (–Ω–µ –≤ –Ω–∞—á–∞–ª–æ –∏ –Ω–µ –≤ —Ä–∞—Å—à–∏—Ä–µ–Ω–∏–µ)
    """
    # –†–∞–∑–¥–µ–ª—è–µ–º –Ω–∞ –∏–º—è –∏ —Ä–∞—Å—à–∏—Ä–µ–Ω–∏–µ
    name, ext = os.path.splitext(filename)
    
    # –ï—Å–ª–∏ –∏–º—è —Å–ª–∏—à–∫–æ–º –∫–æ—Ä–æ—Ç–∫–æ–µ, –ø—Ä–æ—Å—Ç–æ –¥–æ–±–∞–≤–ª—è–µ–º –≤ –∫–æ–Ω–µ—Ü
    if len(name) <= 1:
        return name + '0' + ext
    
    # –í—ã–±–∏—Ä–∞–µ–º —Å–ª—É—á–∞–π–Ω—É—é –ø–æ–∑–∏—Ü–∏—é (–Ω–µ –≤ –Ω–∞—á–∞–ª–æ)
    position = random.randint(1, len(name))
    
    # –í—Å—Ç–∞–≤–ª—è–µ–º '0' –≤ –≤—ã–±—Ä–∞–Ω–Ω—É—é –ø–æ–∑–∏—Ü–∏—é
    new_name = name[:position] + '0' + name[position:]
    
    return new_name + ext

def rename_ipynb_files(directory='.'):
    """
    –ü–µ—Ä–µ–∏–º–µ–Ω–æ–≤—ã–≤–∞–µ—Ç –≤—Å–µ .ipynb —Ñ–∞–π–ª—ã –≤ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–∏, –¥–æ–±–∞–≤–ª—è—è '0' –≤ —Å–ª—É—á–∞–π–Ω–æ–µ –º–µ—Å—Ç–æ
    """
    directory = Path(directory)
    
    # –ù–∞—Ö–æ–¥–∏–º –≤—Å–µ .ipynb —Ñ–∞–π–ª—ã
    ipynb_files = list(directory.glob('*.ipynb'))
    
    if not ipynb_files:
        print("‚ùå –§–∞–π–ª—ã .ipynb –Ω–µ –Ω–∞–π–¥–µ–Ω—ã –≤ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–∏!")
        return
    
    print(f"–ù–∞–π–¥–µ–Ω–æ —Ñ–∞–π–ª–æ–≤ .ipynb: {len(ipynb_files)}\n")
    
    renamed_count = 0
    
    for file_path in ipynb_files:
        old_name = file_path.name
        new_name = add_zero_to_filename(old_name)
        new_path = file_path.parent / new_name
        
        # –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ –Ω–æ–≤–æ–µ –∏–º—è –Ω–µ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç
        if new_path.exists():
            print(f"‚ö†Ô∏è  –ü—Ä–æ–ø—É—â–µ–Ω (—Ñ–∞–π–ª —Å—É—â–µ—Å—Ç–≤—É–µ—Ç): {old_name}")
            continue
        
        try:
            # –ü–µ—Ä–µ–∏–º–µ–Ω–æ–≤—ã–≤–∞–µ–º —Ñ–∞–π–ª
            file_path.rename(new_path)
            print(f"‚úì {old_name} ‚Üí {new_name}")
            renamed_count += 1
        except Exception as e:
            print(f"‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–µ—Ä–µ–∏–º–µ–Ω–æ–≤–∞–Ω–∏–∏ {old_name}: {e}")
    
    print(f"\n{'='*60}")
    print(f"–ü–µ—Ä–µ–∏–º–µ–Ω–æ–≤–∞–Ω–æ —Ñ–∞–π–ª–æ–≤: {renamed_count}/{len(ipynb_files)}")
    print(f"{'='*60}")

def rename_with_backup(directory='.', create_backup=True):
    """
    –ü–µ—Ä–µ–∏–º–µ–Ω–æ–≤—ã–≤–∞–µ—Ç —Ñ–∞–π–ª—ã —Å —Å–æ–∑–¥–∞–Ω–∏–µ–º —Ä–µ–∑–µ—Ä–≤–Ω–æ–π –∫–æ–ø–∏–∏
    """
    directory = Path(directory)
    
    if create_backup:
        backup_dir = directory / 'backup_notebooks'
        backup_dir.mkdir(exist_ok=True)
        print(f"üìÅ –°–æ–∑–¥–∞–Ω–∞ –ø–∞–ø–∫–∞ –¥–ª—è –±—ç–∫–∞–ø–æ–≤: {backup_dir}\n")
    
    ipynb_files = list(directory.glob('*.ipynb'))
    
    for file_path in ipynb_files:
        # –°–æ–∑–¥–∞–µ–º –±—ç–∫–∞–ø
        if create_backup:
            shutil.copy2(file_path, backup_dir / file_path.name)
        
        # –ü–µ—Ä–µ–∏–º–µ–Ω–æ–≤—ã–≤–∞–µ–º
        old_name = file_path.name
        new_name = add_zero_to_filename(old_name)
        new_path = file_path.parent / new_name
        
        if not new_path.exists():
            file_path.rename(new_path)
            print(f"‚úì {old_name} ‚Üí {new_name}")

